<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lemon.community.mapper.DiscussPostMapper">
    <sql id="selectFields">
        id, user_id, title, content, type, status, create_time, comment_count, score
    </sql>
    <resultMap id="discussPostEntityMap" type="com.lemon.community.bean.DiscussPost">
        <id column="id" property="id"></id>
        <result column="user_id" property="userId"></result>
        <result column="create_time" property="createdTime"></result>
        <result column="comment_count" property="commentCount"></result>
    </resultMap>
    <select id="findDiscussPosts" resultMap="discussPostEntityMap">
        SELECT <include refid="selectFields"></include>
        FROM discuss_post
        <!--表示该条话题没有被拉黑 -->
        WHERE status != 2
        <!--如果userid不为0则表示查询该用户的所有正常话题，相当于复用了该查询语句 -->
        <if test="userId!=0">
            AND user_id=#{userId}
        </if>
        ORDER BY type DESC,create_time DESC
        LIMIT #{offset},#{limit}
    </select>
    <select id="discussPostsCount" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM discuss_post
        WHERE status!=2
        <if test="userId!=0">
            AND user_id = #{userId}
        </if>
    </select>
</mapper>
